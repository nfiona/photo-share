<h1> <%= @album.title %></h1>
<h6> <time> Updated at <%= @album.updated_at %></time> </h6>
<h4> <%= link_to "< back to Albums", albums_path(@album) %> </h4>

<div class="photo-holder">

<% @album.photos.each do |photo| %>
    <div class="photo">
      <%= link_to image_tag(photo.img_url), album_photo_path(@album, photo) %>
    </div>

<% end %>

</div>

<% if @album.user == current_user %>
<h3><%= link_to "Edit Album", edit_album_path(@album) %> </h3>
<h3> <%= link_to "Add Photo", new_album_photo_path(@album) %></h3>
<% end %>
